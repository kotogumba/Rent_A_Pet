<style>
    *{
      padding: 0;
      margin: 0;
      box-sizing: border-box;
    }
    body{
      background: rgb(248,211,183);
    }
    .row{
      background: rgb(191,133,104);
      border-radius: 30px;
      box-shadow: 12px 12px 22px rgb(53,45,42);
    }
    img{
      border-top-left-radius: 30px;
      border-bottom-left-radius: 30px;

    }
    .btn1{
      border: none;
      outline: none;
      height: 58px;
      width: 100%;
      background-color: black;
      color: white;
      border-radius: 4px;
      font-weight: bold;
    }
    .btn1:hover{
      background: white;
      color: black;
    }
    /* .logo{
      width: 35px;
      height: 35px;
    } */
</style>

<section class="Form my-4 mx-5">
  <div class="container">
    <div class="row no-gutters">
      <div class="col-lg-5">
      <%= image_tag "majestic_login_doggo.jpg", class:"img-fluid", alt:"a magical looking doggo" %>
      </div>
      <div class="col-lg-7 px-5 pt-5">
        <div class="form-row">
          <div class="col-lg-7">
            <%# <%= image_tag "paw.png", class:"logo", alt:"logo" %>
            <p><h1 class="font-weight-bold py-3">Rent a pet</h1></p>
            <p><h4>Sign into your account</h4></p>
            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: {turbo: false}) do |f| %>
              <div class="form-inputs">
                <%= f.input :email,
                            required: false,
                            autofocus: true,
                            input_html: { autocomplete: "email", class:"form-control my-2 p-3" } %>
                <%= f.input :password,
                            required: false,
                            input_html: { autocomplete: "current-password", class:"form-control my-2 p-3" } %>
                <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
              </div>

              <div class="form-actions">
                  <%= f.button :submit, "Log in", class: "btn1 mt-3 mb-5" %>
              </div>
            <% end %>
            <div>
              <p>
                <%= render "devise/shared/links" %>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
